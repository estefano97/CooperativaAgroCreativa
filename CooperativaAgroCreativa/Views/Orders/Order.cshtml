@using CooperativaAgroCreativa.Data
@using CooperativaAgroCreativa.Models.DB
@model IEnumerable<Product>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h1 class="text-center">Compra Realizada Con Exito</h1>
    <div class="my-4 mx-3">
        <p><b>Fecha y Hora de compra:</b> @Context.Items["Hour"]</p>
        <p><b>Id de compra:</b> @Context.Items["Id"]</p>
    </div>
    <table class="table my-tableResponsive table-bordered">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Talla</th>
            <th scope="col">Cantidad Agregada</th>
            <th scope="col">Precio Unidad</th>
            <th scope="col">Precio Total Por Producto</th>
          </tr>
        </thead>
        <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td> @producto.Id </td>
                <td> @producto.Description </td>
                <td> @producto.Quantity </td>
                <td> $@producto.UnityPrice </td>
                <td> $@(Int32.Parse(producto.UnityPrice) * producto.Quantity) </td>
            </tr>
        }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4"><h3>Cantidad a Pagar:</h3></td>
                <td class="text-center"><h3>@Context.Items["TotalPrice"].00$</h3></td>
            </tr>
        </tfoot>
        </table>
</body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</html>