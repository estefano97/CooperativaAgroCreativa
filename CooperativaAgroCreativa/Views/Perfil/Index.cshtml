@using CooperativaAgroCreativa.Data
@using CooperativaAgroCreativa.Models.DB
@model AspNetUser
@{
    ViewData["Title"] = "Perfil";
    ViewData["Perfil"] = "my-buttonActive";
}

<main>
    <h1 class="text-center my-4">Tu información de perfil</h1>
    <div class="mx-auto" style="font-size: 1.15rem; width: 26rem;">
        <p><b>Correo:</b> @Model.Email </p>
        <p><b>Rol:</b> @Model.Role </p>
        <p><b>Nombre:</b> @Model.FullName </p>
        <p><b>Dirección:</b> @Model.Direction </p>
        <p><b>Teléfono:</b> @Model.Movil </p>
        <div class="my-buttonEditPerfil">
            <form method="post" action="/Perfil/ChangeInfo">
                <input class="btn btn-warning" type="submit" value="Editar mi información"/>
            </form>
            <form method="post" action="/Perfil/ChangeRole">
                <input class="btn btn-warning" type="submit" value="Solicitar nuevo rol" />
            </form>
        </div>

    </div>
</main>